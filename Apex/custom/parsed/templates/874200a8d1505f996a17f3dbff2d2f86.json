{"components/cart/coupon-input":"<!-- Apex Set Coupon Box to Always Open, add Coupon Box ID -->\n<div class=\"cart-form coupon-code\">\n    <form class=\"form form--hiddenLabels coupon-form\" method=\"post\" action=\"{{urls.cart}}\">\n        <input class=\"form-input\" data-error=\"{{lang 'cart.coupons.empty_error'}}\"  id=\"couponcode\" type=\"text\" name=\"couponcode\" value=\"\" placeholder=\"{{lang 'cart.coupons.coupon_code'}}\">\n        <input id=\"SideCouponCodeBox\" class=\"button\" type=\"submit\" value=\"{{lang 'cart.coupons.button'}}\">\n        <input type=\"hidden\" name=\"action\" value=\"applycoupon\">\n    </form>\n</div>\n","components/cart/totals":"<ul class=\"cart-totals\">\n    <li class=\"cart-total\">\n        <div class=\"cart-total-label\">\n            <strong>{{lang 'cart.checkout.subtotal'}}:</strong>\n        </div>\n        <div class=\"cart-total-value\">\n            <span>{{cart.sub_total.formatted}}</span>\n        </div>\n    </li>\n    {{#each cart.taxes}}\n        <li class=\"cart-total\">\n            <div class=\"cart-total-label\">\n                <strong>{{name}}:</strong>\n            </div>\n            <div class=\"cart-total-value\">\n                <span>{{cost.formatted}}</span>\n            </div>\n        </li>\n    {{/each}}\n    {{#if cart.discount }}\n        <li class=\"cart-total discount\">\n            <div class=\"cart-total-label\">\n                <strong>{{lang 'cart.discount'}}:</strong>\n            </div>\n            <div class=\"cart-total-value\">\n                {{cart.discount.formatted}}\n            </div>\n        </li>\n    {{/if}}\n    {{#if cart.coupons}}\n        {{#each cart.coupons}}\n            <li class=\"cart-total\">\n                <div class=\"cart-total-label\">\n                    <strong>{{lang 'cart.coupons.code_label' code=code}}</strong>\n                    <div>\n                        <a href=\"{{remove_url}}\">{{lang 'cart.coupons.remove'}}</a>\n                    </div>\n                </div>\n                <div class=\"cart-total-value\">\n                    <span>{{discount.formatted}}</span>\n                </div>\n            </li>\n        {{/each}}\n    {{else}}\n        <li class=\"cart-total\">\n            <div class=\"cart-total-label\">\n                <strong>{{lang 'cart.coupon_code'}}:</strong>\n            </div>\n            {{> components/cart/coupon-input}}\n        </li>\n    {{/if}}\n    <li class=\"cart-total\">\n        <div class=\"cart-total-label\">\n            <strong>{{lang 'cart.checkout.grand_total'}}:</strong>\n        </div>\n        <div class=\"cart-total-value cart-total-grandTotal\">\n            <span><strong>{{cart.grand_total.formatted}}</strong></span>\n        </div>\n    </li>\n</ul>\n"}
