{"components/faceted-search/facets/range":"<div class=\"sidebar-section accordion {{ title }}\">\n    <h5 class=\"title\">\n        <span>{{ title }}</span>\n        <i class=\"sprite sprite-black-plus\"></i>\n    </h5>\n    <div class=\"content\">\n        <div id=\"facetedSearch-content--{{hyphenate facet }}\">\n            <form id=\"facet-range-form\" class=\"form\" method=\"get\" data-faceted-search-range novalidate>\n                {{#each current_selected_items}}\n                    <input type=\"hidden\" name=\"{{ param_name }}[]\" value=\"{{ param_value }}\"/>\n                {{/each}}\n                <input type=\"hidden\" name=\"search_query\" value=\"{{search_query}}\">\n                {{#if sort}}\n                    <input type=\"hidden\" name=\"sort\" value=\"{{sort}}\">\n                {{/if}}\n                <fieldset class=\"form-fieldset\">\n                    <div class=\"form-minMaxRow\">\n                        <div class=\"form-field\">\n                            <input\n                                name=\"min_price\"\n                                placeholder=\"{{lang 'search.faceted.range.min-placeholder'}}\"\n                                min=\"0\"\n                                class=\"form-input form-input--small\"\n                                required\n                                type=\"number\"\n                                value=\"{{ min_price }}\"\n                            />\n                        </div>\n\n                        <div class=\"form-field\">\n                            <input\n                                name=\"max_price\"\n                                placeholder=\"{{lang 'search.faceted.range.max-placeholder'}}\"\n                                min=\"0\"\n                                class=\"form-input form-input--small\"\n                                required\n                                type=\"number\"\n                                value=\"{{ max_price }}\"\n                            />\n                        </div>\n\n                        <div class=\"form-field\">\n                            <button class=\"button button-sm\" type=\"submit\">\n                                Refresh\n                            </button>\n                        </div>\n                    </div>\n\n                    <div class=\"form-inlineMessage\"></div>\n                </fieldset>\n            </form>\n        </div>\n    </div>\n</div>\n"}
