{"components/account/order-contents":"<div class=\"orders\">\n    {{#each order.items}}\n        {{#if shipping_rows.length}}\n            {{#each shipping_rows}}\n                <div class=\"account-listShipping\">\n                    <h5 class=\"account-listShipping-title\">{{lang 'account.orders.details.ship_to_multi' street=address city=city state=state zip=zip country=country}}</h5>\n                </div>\n            {{/each}}\n        {{/if}}\n    <div class=\"account-listItem\">\n        <div class=\"account-product account-product--alignMiddle\">\n            <figure class=\"account-product-figure\">\n                {{#if type '===' 'giftcertificate'}}\n                    <img  data-sizes=\"auto\" src=\"{{cdn ../../theme_settings.default_image_gift_certificate}}\" alt=\"Gift Certificate\" title=\"Gift Certificate\">\n                {{else}}\n                    <img class=\"account-product-image\" data-sizes=\"auto\"src=\"{{getImage image 'productthumb_size' (cdn ../../theme_settings.default_image_product)}}\"\n                         alt=\"{{image.alt}}\"\n                         title=\"{{image.alt}}\">\n                {{/if}}\n            </figure>\n            <div class=\"account-product-body\">\n                <span class=\"account-product-price\">{{price.formatted}}</span>\n                <h5 class=\"account-product-title\">{{quantity}} &#215; {{name}}</h5>\n                {{#if options}}\n                <ul>\n                    {{#each options}}\n                        <li>{{name}}: {{value}}</li>\n                    {{/each}}\n                </ul>\n                {{/if}}\n                {{#if gift_wrapping_name}}\n                    <ul>\n                        <li>{{lang 'account.orders.gift_wrapping'}} {{gift_wrapping_name}}</li>\n                    </ul>\n                {{/if}}\n                {{#if event_date}}\n                    <ul>\n                        <li>{{event_date.name}}: {{event_date.date}}</li>    \n                    </ul>\n                {{/if}}\n                {{#if refunded}}\n                    <p class=\"account-product-refundQty\">{{lang 'account.orders.refunded_quantity' qty=refunded_qty}}</p>\n                {{else}}\n                    {{#if refunded_qty}}\n                        <p class=\"account-product-refundQty\">{{lang 'account.orders.refunded_quantity' qty=refunded_qty}}</p>\n                    {{/if}}\n                {{/if}}\n            </div>\n        </div>\n    </div>\n    {{/each}}\n</div>\n"}
